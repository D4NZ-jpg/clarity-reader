{
  "manifest_version": 3,
  "name": "Clarity Reader",
  "version": "0.1.0",
  "description": "Simple and elegante reader for chrome. Convert any page into a easy to read article",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": ["storage", "scripting"],
  "content_scripts": [],
  "host_permissions": ["https://*/*"]
}
